			<TextBlock x:Name="FileSizeText" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="10.667"/>
			<Image Margin="5,5,0,0" Source="Images/fileicon.png" Stretch="Fill" Width="25" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		</Grid>
	</Grid>
</base:BaseFolderViewIcon>