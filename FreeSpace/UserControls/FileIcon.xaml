<base:BaseFolderViewIcon
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:base="clr-namespace:FreeSpace"
	x:Class="FreeSpace.FileIcon"
	x:Name="UserControl"
	d:DesignWidth="200" d:DesignHeight="150" Width="200" Height="57" Margin="10,10,0,0" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" BorderThickness="1" BorderBrush="WhiteSmoke" Background="WhiteSmoke">

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="BackGround" Margin="0,-0.001,0,0.001">
